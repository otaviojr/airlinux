#!/bin/bash

stage="$1"
destination="$2"
arch="$3"

destination_dir=$destination/dist
download_dir=$destiantion/packages

cd $destination_dir

mkdir dev
mkdir boot
mkdir etc
mkdir home
mkdir root
mkdir -p home/airlinux
sudo chown 1001:1001 home/airlinux
sudo mknod -m 660 ./dev/console c 5 1
sudo mknod -m 660 ./dev/null c 1 3
sudo mknod -m 666 ./dev/zero c 1 5
sudo mknod -m 666 ./dev/ptmx c 5 2
sudo mknod -m 666 ./dev/tty c 5 0
sudo mknod -m 444 ./dev/random c 1 8
sudo mknod -m 444 ./dev/urandom c 1 9
mkdir ./dev/pts
mkdir ./dev/shm
mkdir sys
mkdir proc
ln -sv /proc/self/mounts ./etc/mtab
mkdir run
mkdir ./run/lock
mkdir tmp
mkdir var
mkdir ./var/run
touch ./var/run/utmp
touch ./var/run/btmp
touch ./var/run/wtmp
touch ./var/run/lastlog
mkdir ./var/lock
mkdir ./var/tmp
mkdir ./var/opt
mkdir ./var/cache
mkdir ./var/db
mkdir ./var/local
