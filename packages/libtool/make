#!/bin/bash

stage="$1"
destination="$2"
arch="$3"

#Include our common functions
. ./packages/common/functions

echo "Cross-Compiling libtool for $arch at $destination"

download_dir="$destination/packages"
destination_dir="$destination/dist"

cd $download_dir
if [ ! -d "libtool-2.4.2" ]; then
  wget http://gnu.c3sl.ufpr.br/ftp/libtool/libtool-2.4.2.tar.gz
  tar -xf libtool-2.4.2.tar.gz
fi

cd "$download_dir/libtool-2.4.2"
if [ -f "done-$stage.lock" ]; then
  echo "Already done. Skiping..."
  exit 0
fi

target=$(get_target_for_arch $arch)

echo "./configure --prefix=/ --program-prefix=$prefix --target=$target --with-sysroot=$destination_dir"
./configure --prefix=/ --program-prefix=$prefix --target=$target --with-sysroot=$destination_dir
make
make DESTDIR=$destination_dir install

touch "done-$stage.lock"
